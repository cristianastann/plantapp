<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Forest Background"
        android:scaleType="centerCrop"
        android:src="@drawable/forestbackground" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"

        android:layout_marginStart="43dp"
        android:layout_marginTop="105dp"

        android:clickable="false"
        android:fontFamily="@font/latoitalic"
        android:gravity="center|left"
        android:lineSpacingExtra="10sp"
        android:text="Every \nplant \nhas \na story. \n Unfold \nthem!"
        android:textColor="#291f1a"
        android:textSize="32sp"
        android:textStyle="italic"
        tools:visibility="visible" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_marginTop="165dp"
        android:layout_marginStart="131dp"

        android:paddingStart="8dp"
        android:paddingEnd="8dp"

        android:text="Start Here"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/font_lato"
        android:background="@drawable/button_background"
        android:lineHeight="24sp"
        android:gravity="center"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:drawableStart="@drawable/cameraintro"

        android:onClick="launchCamera"/>



</RelativeLayout>
